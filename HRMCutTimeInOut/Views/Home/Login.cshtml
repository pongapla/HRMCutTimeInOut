
@{
    ViewData["Title"] = "Login Page"; 
}
   
<div class="container mt-5">
    <div class="row justify-content-center" style="background-image: src()">
        <div class="col-md-4">
            <h2 class="text-center text-secondary">TLM Login</h2>
            <form method="post" action="@Url.Action("Login", "Account")">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                </div>
                <div class="input-group mb-3">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block" style="height: 45px;">Login</button>
            </form>
        </div>
    </div>
</div>